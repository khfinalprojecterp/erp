<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC
"-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="product">

	<!-- <resultMap type="M_storage" id="M_storage">
		<result column="IDCODE" property="IDCODE"
		        typeHandler="strArrTypeHandler"/>
	</resultMap> -->
	
	<select id="selectProductList" resultType="Product">
		SELECT * FROM PRODUCT ORDER BY PCODE DESC
	</select>
	
	<select id="selectProduct" parameterType="_int" resultType="Product">
		SELECT * FROM PRODUCT WHERE  = #{PCODE}
	</select>
	
	<insert id="insertProduct" parameterType="Product">
		INSERT INTO PRODUCT
		VALUES (#{PCODE},#{PCATE}, 
		        #{PNAME}, #{PSIZE}, #{PBARCODE}
		       )
	</insert>
 
	<update id="updateProduct" parameterType="Product">
		UPDATE PRODUCT
		SET PNAME = #{PNAME},
		    PSIZE= #{PSIZE},
		     PBARCODE= #{PBARCODE}
		WHERE PCODE = ?
	</update>
	
	<delete id="deleteProduct" parameterType="_int">
		DELETE FROM PRODUCT WHERE PCODE = #{PCODE}
	</delete>  
</mapper>








